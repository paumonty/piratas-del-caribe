   "source": [
    "def colocar_barcos(tablero):\n",
    "    esloras = [2, 2, 2, 3, 3, 4]\n",
    "    for eslora in esloras:\n",
    "        barco_valido = crear_barco_aleatorio(eslora, tablero)\n",
    "        for h, v in barco_valido:\n",
    "            tablero[h, v] = \"O\"\n"
